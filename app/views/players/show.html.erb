<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @player.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @player.email %>
</p>

<p>
  <strong>Twitter:</strong>
  <%= @player.twitter %>
</p>

<p>
  <strong>Avatar url:</strong>
  <%= @player.avatar_url %>
</p>

<% if @player.scores.any? %>
	<p> Inbounds Registered: <%= @player.scores.count %> </p>
	<p> Money: <%= render @scores %> </p>
<% end %>

<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
